<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/train" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_black_trance"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_icon_back_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/query_train_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_centre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_swap"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_icon_swap" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发城市"
                    android:textColor="@color/black_text3_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_start_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@null"
                    android:ellipsize="middle"
                    android:hint="出发城市"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="北京"
                    android:textColor="@color/black_text2_color"
                    android:textColorHint="@color/black_text3_color"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_start_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="left"
                    android:text="北京"
                    android:textColor="@color/black_text2_color"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到达城市"
                    android:textColor="@color/black_text3_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_end_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@null"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:hint="到达城市"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="武汉"
                    android:textColor="@color/black_text2_color"
                    android:textColorHint="@color/black_text3_color"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_end_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="武汉"
                    android:textColor="@color/black_text2_color"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.2px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/tv_time_query"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="--月--日"
            android:textColor="@color/black_text2_color"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.2px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/lineColor" />


        <Button
            android:id="@+id/btn_query"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_background"
            android:text="查  询"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
    
</RelativeLayout>