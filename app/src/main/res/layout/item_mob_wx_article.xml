<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_show_wx"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_gray_bg"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tv_title_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="北京医改新政实施满月，三级医院总门急诊量降15.1%三级医院总门急诊量降15三级医院总门急诊量降15北京医改新政实施满月，三级医院总门急诊量降15.1%"
            android:textColor="@color/black_text2_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="2017"
            android:textColor="@color/black_text3_color"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>
